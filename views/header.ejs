<style>
  .navigation {
    display: flex;
    justify-content: space-between;
    max-width: 1800px;
    flex: 1;
    width: 100%;
    padding: 16px 0;
  }

  .navigation-container {
    display: flex;
    align-items: center;
  }

  .navigation-container-mobile {
    display: none;
  }

  .navigation-container-mobile img {
    margin: 0 12px;
    width: 110px;
  }

  @media (max-width: 750px) {
    .navigation-container-mobile {
      margin-bottom: 1rem;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .navigation-container {
      display: none;
    }
  }

  .navigation-container img {
    margin: 0 12px;
    width: 110px;
  }

  @media all and (max-width: 800px) {
    .navigation {
      padding: 16px 0;
      margin: 24px auto 0 auto;
    }

    .navigation img {
      margin: 0;
    }
  }

  a.logo {
    margin-left: 12px;
  }
  a.logo > img {
    border-radius: 50%;
  }
</style>

<nav class="navigation">
  <div class="navigation-container-mobile">
    <a class="logo" href="/">
      <img src="/media/profil.png" alt="Profil picture" />
    </a>
  </div>

  <div class="navigation-container">
    <a class="logo" href="/">
      <img src="/media/profil.png" alt="Profil picture" />
    </a>
  </div>
  <div class="navigation-network">
    <a href="<%- link.github %>"> <i class="fa-brands fa-github fa-3x"></i> </a>
    <a href="<%- link.linkedin %>">
      <i class="fa-brands fa-linkedin fa-3x"></i>
    </a>
    <a
      href="<%- link.twitter %>"
      class="twitter-follow-button"
      data-lang="en"
      data-show-count="false"
      >Follow @BasileMarchand</a
    >
    <script
      async
      src="https://platform.twitter.com/widgets.js"
      charset="utf-8"
    ></script>
  </div>
</nav>
